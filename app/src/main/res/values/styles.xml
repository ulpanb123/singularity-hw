<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="DefaultTextStyle">
        <item name="android:textSize">22sp</item>
    </style>

    <style name="DefaultTextStyle.ToolbarTitleTextStyle">
        <item name="titleTextColor">@color/title_text</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="DefaultTextStyle.ListItemTextStyle">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="DefaultTextStyle.BottomSheetButtonText" >
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="TabTextStyle">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="CardViewTextStyle">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>


    <style name="ProfileButtons">
        <item name="android:textAlignment">center</item>
        <item name="android:paddingVertical">10dp</item>
        <item name="android:layout_marginHorizontal">20dp</item>
        <item name="android:textColor">@color/blue_accent</item>
        <item name="android:textSize">16sp</item>
        <item name="android:background">@drawable/btn_keyboard</item>
    </style>

</resources>